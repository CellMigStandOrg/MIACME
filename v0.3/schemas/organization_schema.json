{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title" : "MIACME organization schema",
  "version" : "0.3",
  "description" : "JSON-schema representing an organization in MIACME",
  "type" : "object",
  "properties" : {
    "@context": {
      "anyOf": [
        {
          "type": "string"
        },
        {
          "type": "object"
        },
        {
          "type": "array"
        }
      ]
    },
    "@id": { "type": "string", "format": "uri" },
    "@type": { "type": "string" },
    "name" : {
      "type" : "string"
    }
  },
  "additionalProperties": false
}